<odoo>

    <record id="view_list_collage_department" model="ir.ui.view">
        <field name="name">collage.department.list</field>
        <field name="model">collage.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_form_collage_department" model="ir.ui.view">
        <field name="name">collage.department.form</field>
        <field name="model">collage.department</field>
        <field name="arch" type="xml">
            <form string="Departments">
                <group>
                    <field name="name"/>
                    <field name="course_id"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_collage_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">collage.department</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_collage_root" name="College Management" sequence="1"/>
    <menuitem id="menu_collage_department" name="Departments" parent="menu_collage_root" action="action_collage_department" sequence="3"/>

</odoo>

