<odoo>

    <record id="view_list_collage_course" model="ir.ui.view">
        <field name="name">collage.course.list</field>
        <field name="model">collage.course</field>
        <field name="arch" type="xml">
            <list string="Course">
                <field name="name"/>
                <field name="duration"/>

            </list>
        </field>
    </record>

    <record id="view_form_collage_course" model="ir.ui.view">
        <field name="name">collage.course.form</field>
        <field name="model">collage.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <group>
                    <field name="name"/>
                    <field name="duration"/>
                    <field name="department_id"/>
                    <field name="student_id"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_collage_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">collage.course</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_collage_root" name="College Management" sequence="1"/>
    <menuitem id="menu_collage_course" name="Courses" parent="menu_collage_root" action="action_collage_course" sequence="3"/>

</odoo>

