<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
	<!--Report Action for Doctor-->
	<record id="action_report_hospital_doctor" model="ir.actions.report">
		<field name="name">Doctor Report</field>
		<field name="model">hospital.doctor</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">Hospital_odoo18.report_hospital_doctor</field>  
		<field name="print_report_name">'Doctor - %s' % (object.name)</field>
		<field name="binding_model_id" ref="model_hospital_doctor"/>
		<field name="binding_type">report</field>
	</record>


	<!-- Report Action for Patient -->
    <record id="action_report_hospital_patient" model="ir.actions.report">
        <field name="name">Patient Report</field>
        <field name="model">hospital.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">Hospital_odoo18.report_patient_layout</field>
        <field name="print_report_name">'Patient - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_hospital_patient"/>
        <field name="binding_type">report</field>
    </record>

</odoo>